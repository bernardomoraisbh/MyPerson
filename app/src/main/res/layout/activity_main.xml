<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.person.bernardo.myperson.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_nasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="104dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="7dp"
        app:hintTextAppearance="@style/MyAppearance"
        app:layout_constraintBottom_toTopOf="@+id/input_layout_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_tel">

        <EditText
            android:id="@+id/nascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_nascimento"
            android:inputType="date"
            android:singleLine="false"
            android:textAppearance="@style/MyAppearanceBlack"
            android:textColorHint="@color/colorRed"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="176dp" />
    </android.support.design.widget.TextInputLayout>
    //

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="37dp"
        app:hintTextAppearance="@style/MyAppearance"
        app:layout_constraintBottom_toTopOf="@+id/input_layout_tel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_nome"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorRed"
            android:textSize="14sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="52dp" />
    </android.support.design.widget.TextInputLayout>
    //

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_tel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="37dp"
        app:hintTextAppearance="@style/MyAppearance"
        app:layout_constraintBottom_toTopOf="@+id/input_layout_nasc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_name">

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_telefone"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorRed"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="118dp" />

    </android.support.design.widget.TextInputLayout>
    //

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="1dp"
        app:hintTextAppearance="@style/MyAppearance"
        app:layout_constraintBottom_toTopOf="@+id/input_layout_endereco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_nasc">

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/MyAppearanceBlack"
            android:textColorHint="@color/colorRed"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="235dp" />

    </android.support.design.widget.TextInputLayout>
    //

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_endereco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="2dp"
        app:hintTextAppearance="@style/MyAppearance"
        app:layout_constraintBottom_toTopOf="@+id/addContato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_email">

        <EditText
            android:id="@+id/endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hint_endereco"
            android:inputType="textPostalAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorRed"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="288dp" />
    </android.support.design.widget.TextInputLayout>
    //

    <Button
        android:id="@+id/addContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="109dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="2dp"
        android:text="@string/btn_add_contato"
        app:layout_constraintBottom_toTopOf="@+id/whatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_endereco" />

    <Button
        android:id="@+id/anivesario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="5dp"
        android:text="@string/btn_salvar_aniversario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatsapp" />

    <Button
        android:id="@+id/whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="115dp"
        android:text="@string/btn_enviar_whatsapp"
        app:layout_constraintBottom_toTopOf="@+id/anivesario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addContato" />

</android.support.constraint.ConstraintLayout>
